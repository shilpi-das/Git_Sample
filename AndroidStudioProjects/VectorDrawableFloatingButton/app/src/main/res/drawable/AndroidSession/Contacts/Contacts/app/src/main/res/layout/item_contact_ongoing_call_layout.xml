<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:minHeight="72dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/ivItemOnGoingCallProfilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:src="@drawable/group"

            />

        <TextView
            android:id="@+id/tvItemOnGoingCallNameNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivItemOnGoingCallProfilePicture"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="@string/demo_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvItemOnGoingCallNameNumber"
            android:layout_below="@+id/tvItemOnGoingCallNameNumber"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/demo_text"
            android:textSize="14sp"
            android:id="@+id/tvItemOnGoingCallDuration"

            />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtClktemOnGoingCall"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:format12Hour="mm:ss"

            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
