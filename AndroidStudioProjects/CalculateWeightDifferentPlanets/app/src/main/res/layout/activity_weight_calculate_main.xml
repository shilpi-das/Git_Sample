<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gl.calculateweightdifferentplanets.WeightCalculateMainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.61"
                android:ellipsize="none"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/tv_weight_enter"
                android:textAllCaps="true"
                android:textColor="#6e15ae"
                android:textSize="12dp"
                android:typeface="sans"

                />

            <EditText
                android:id="@+id/etWeight"
                style="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#d6f6f60b"
                android:backgroundTint="#d6f6f60b"
                android:fontFamily="@string/abc_font_family_caption_material"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/tv_kg"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/b_calculate"
                android:textAllCaps="false"

                android:background="#d02121" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_planets"
            android:id="@+id/textView3"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:rowCount="3"


            >

            <include
                android:id="@+id/layout_mecury"
                layout="@layout/layout_mercury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                />


            <include
                android:id="@+id/layout_venus"
                layout="@layout/layout_venus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_moon"
                layout="@layout/layout_moon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_mars"
                layout="@layout/layout_mars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_jupiter"
                layout="@layout/layout_jupiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_saturn"
                layout="@layout/layout_saturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_uranus"
                layout="@layout/layout_uranus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_neptune"
                layout="@layout/layout_neptune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

            <include
                android:id="@+id/layout_pluto"
                layout="@layout/layout_pluto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                />

        </GridLayout>



    </LinearLayout>
</ScrollView>